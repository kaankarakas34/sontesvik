# Coolify Deployment Environment Variables
# Bu dosya Coolify deployment için özel ayarları içerir

# Database Configuration
DB_NAME=tesvik360
DB_USER=tesvik360_user
DB_PASSWORD=secure_password_123
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production

# CORS Configuration - Tüm origin'lere izin ver
CORS_ORIGIN=*

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Application Configuration
NODE_ENV=production
PORT=5000

# Frontend Environment Variables
VITE_API_BASE_URL=/api
VITE_NODE_ENV=production
VITE_APP_NAME=Tesvik360
VITE_APP_VERSION=1.0.0

# React App Variables (backward compatibility)
REACT_APP_API_URL=/api
REACT_APP_BASE_URL=/
REACT_APP_NODE_ENV=production
REACT_APP_APP_NAME=Tesvik360
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_DARK_MODE=true

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# UI Configuration
REACT_APP_ITEMS_PER_PAGE=10
REACT_APP_PAGINATION_SIZE=5
REACT_APP_DEFAULT_LANGUAGE=tr
REACT_APP_ENABLE_RTL=false

# Security Configuration
REACT_APP_ENABLE_CSP=true
REACT_APP_ENABLE_HTTPS_REDIRECT=true