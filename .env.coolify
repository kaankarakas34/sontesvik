# =====================================================
# Coolify Git Deployment Environment Variables
# =====================================================
# Bu dosya Coolify Git deployment için optimize edilmiştir
# Coolify dashboard'da bu değişkenleri ayarlayın

# =====================================================
# Coolify Otomatik Değişkenler (Coolify tarafından sağlanır)
# =====================================================
# COOLIFY_FQDN=your-app.coolify.domain
# COOLIFY_URL=https://your-app.coolify.domain
# COOLIFY_BRANCH=main
# COOLIFY_COMMIT_SHA=commit_hash
# COOLIFY_DEPLOYMENT_ID=deployment_id
# COOLIFY_PROJECT_ID=project_id
# COOLIFY_SERVICE_ID=service_id

# =====================================================
# Application Configuration
# =====================================================
NODE_ENV=production
PORT=5000
HOST=0.0.0.0
LOG_LEVEL=info
BCRYPT_SALT_ROUNDS=12

# =====================================================
# Database Configuration (PostgreSQL)
# =====================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=tesvik360_prod
DB_USER=tesvik360_user
DB_PASSWORD=tesvik360_secure_password_2025

# =====================================================
# Redis Configuration
# =====================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_2025

# =====================================================
# JWT Security Configuration
# =====================================================
JWT_SECRET=tesvik360_jwt_secret_key_2025_super_secure
JWT_REFRESH_SECRET=tesvik360_jwt_refresh_secret_key_2025_super_secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =====================================================
# Email Configuration
# =====================================================
EMAIL_HOST=mail.kurumsalaposta.com
EMAIL_PORT=587
EMAIL_USER=info@tesvik360.com
EMAIL_PASS=xk=7-Y.Y792-LrMk
EMAIL_FROM=noreply@tesvik360.com

# =====================================================
# Dynamic URL Configuration (Coolify Otomatik)
# =====================================================
# Bu değerler Coolify tarafından COOLIFY_FQDN'den otomatik ayarlanır
# Manuel ayarlamak isterseniz aşağıdaki değerleri kullanın:
# FRONTEND_URL=https://yourdomain.com
# CORS_ORIGIN=https://yourdomain.com
# VITE_API_BASE_URL=https://yourdomain.com/api

# =====================================================
# SSL/HTTPS Configuration (Coolify Otomatik)
# =====================================================
FORCE_HTTPS=true
SECURE_COOKIES=true
TRUST_PROXY=true

# =====================================================
# File Upload Configuration
# =====================================================
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# =====================================================
# Rate Limiting Configuration
# =====================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_DISABLED=false

# =====================================================
# Session Configuration
# =====================================================
SESSION_SECRET=tesvik360_session_secret_2025_ultra_secure

# =====================================================
# API Configuration
# =====================================================
API_VERSION=v1
API_PREFIX=/api

# =====================================================
# Logging Configuration
# =====================================================
LOG_REQUESTS=true
LOG_ERRORS=true
LOG_FILE=/app/logs/app.log

# =====================================================
# Monitoring Configuration
# =====================================================
ENABLE_MONITORING=true
HEALTH_CHECK_ENDPOINT=/api/health

# =====================================================
# Notlar ve Güvenlik Uyarıları
# =====================================================
# 1. JWT secrets en az 32 karakter olmalı
# 2. Database şifreleri güçlü olmalı
# 3. Email için app password kullanın
# 4. Production'da LOG_LEVEL=error yapabilirsiniz
# 5. COOLIFY_FQDN otomatik olarak Coolify tarafından ayarlanır
# 6. SSL sertifikaları Coolify tarafından otomatik yönetilir