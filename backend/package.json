{
  "name": "tesvik360-backend",
  "version": "1.0.0",
  "description": "Teşvik360 Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo \"Backend build completed\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed": "sequelize-cli db:seed:all",
    "db:reset": "sequelize-cli db:drop && sequelize-cli db:create && sequelize-cli db:migrate && sequelize-cli db:seed:all",
    "seed:test-users": "node src/seeds/testUsers.js",
    "seed:basic-users": "node src/seeds/basicUsers.js",
    "seed:permanent-users": "node src/seeds/permanentUsers.js",
    "clean": "rm -rf node_modules dist"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "isomorphic-dompurify": "^2.9.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.3",
    "puppeteer": "^24.23.0",
    "sequelize": "^6.32.1",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^4.7.1",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "sequelize-cli": "^6.6.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "tesvik",
    "api",
    "backend",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "Teşvik360 Team",
  "license": "MIT"
}
