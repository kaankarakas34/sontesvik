# =====================================================
# LOCAL DEVELOPMENT ENVIRONMENT CONFIGURATION
# =====================================================
# Bu dosya local development için optimize edilmiştir
# Production ayarları için .env.production dosyasını kullanın

# API Configuration - Local Development
# Backend server'ın local'de 5002 portunda çalıştığını varsayıyoruz
# VITE_API_BASE_URL=http://localhost:5002/api

# Environment
VITE_NODE_ENV=development

# App Configuration
VITE_APP_NAME=Teşvik360 Local
VITE_APP_VERSION=1.0.0-local

# Development Configuration
VITE_DEBUG_MODE=true
VITE_ENABLE_DEVTOOLS=true

# Local Server Configuration
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost

# Feature Flags for Development
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_API_LOGGING=true
VITE_ENABLE_ERROR_BOUNDARY=true

# Local Storage Keys
VITE_STORAGE_PREFIX=tesvik360_local_

# Authentication
VITE_TOKEN_STORAGE_KEY=tesvik360_local_token
VITE_REFRESH_TOKEN_STORAGE_KEY=tesvik360_local_refresh_token

# API Timeouts (in milliseconds)
VITE_API_TIMEOUT=30000
VITE_UPLOAD_TIMEOUT=60000